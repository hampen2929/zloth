{
  "$schema": "https://claude.ai/schemas/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(uv:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(docker:*)",
      "Bash(docker compose:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git fetch:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git checkout:*)",
      "Bash(git merge:*)",
      "Bash(git pull:*)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(which:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)"
    ],
    "deny": []
  },
  "hooks": {
    "preToolCall": [
      {
        "matcher": {
          "tool": "Bash",
          "pattern": "git commit"
        },
        "hooks": [
          {
            "type": "command",
            "command": "cd apps/api && uv run ruff check src/ && uv run ruff format --check src/",
            "description": "Run Python linting before commit"
          }
        ]
      }
    ]
  }
}
